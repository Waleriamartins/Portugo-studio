programa
{
	
	funcao inicio()
	{
		real a , b , soma
		escreva( " fazendo uma soma: " )
		leia(a)
		limpa()
		escreva("soma:" ,a," + ")
		leia(b)
		limpa()
		soma = a + b
		escreva("soma: ",a," + ",b , " = " , soma )
	}
}
